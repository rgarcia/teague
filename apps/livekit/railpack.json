{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "install": {
      "commands": [
        "npm install --global corepack@latest",
        "corepack enable pnpm",
        "pnpm install"
      ]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["pnpm build"]
    }
  },
  "deploy": {
    "startCommand": "pnpm start"
  }
}
